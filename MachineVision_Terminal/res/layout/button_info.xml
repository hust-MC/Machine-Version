<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <!-- 左上角钮扣图片 -->

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.5"
        android:orientation="vertical"
        android:paddingBottom="20dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="20dp" >

        <!-- 图片区域 -->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingBottom="5dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:paddingTop="5dp"
                android:text="钮扣图片"
                android:textColor="#464ADC"
                android:textSize="22sp" >
            </TextView>

            <ImageView
                android:id="@+id/button_pic"
                android:layout_width="200px"
                android:layout_height="200px"
                android:layout_centerInParent="true"
                android:layout_gravity="center" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="50dp"
            android:layout_weight="1"
            android:background="@drawable/bg_border"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="算法配置"
                android:textSize="30sp" />

            <ListView
                android:id="@+id/MyListView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
            </ListView>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.5"
        android:orientation="vertical"
        android:paddingBottom="20dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="20dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="100dp"
            android:layout_weight="1"
            android:background="@drawable/bg_border"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="基本信息"
                android:textSize="30sp" />

            <ListView
                android:id="@+id/MyListView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
            </ListView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="50dp"
            android:layout_weight="1"
            android:background="@drawable/bg_border"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="判别标准"
                android:textSize="30sp" />

            <ListView
                android:id="@+id/MyListView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
            </ListView>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingBottom="20dp"
        android:paddingLeft="50dp"
        android:paddingRight="30dp"
        android:paddingTop="20dp" >

        <Button
            android:id="@+id/bt_modify"
            style="@style/bottom_button"
            android:layout_marginTop="0dp"
            android:text="修改" />

        <Button
            android:id="@+id/bt_overwrite"
            style="@style/bottom_button"
            android:layout_marginTop="50dp"
            android:text="保存" />

        <Button
            android:id="@+id/bt_save_as"
            style="@style/bottom_button"
            android:layout_marginTop="50dp"
            android:text="另存为" />

        <Button
            android:id="@+id/bt_delete"
            style="@style/bottom_button"
            android:layout_marginTop="50dp"
            android:text="删除" />

        <Button
            android:id="@+id/exit"
            style="@style/bottom_button"
            android:layout_marginTop="50dp"
            android:text="退出" />
    </LinearLayout>

</LinearLayout>