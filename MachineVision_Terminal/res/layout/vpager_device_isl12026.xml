        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="hour"
            android:textSize="16sp" />

        <com.machineversion.sub_option.NumberSettingLayout
            android:id="@+id/alarm1_set_minute"
