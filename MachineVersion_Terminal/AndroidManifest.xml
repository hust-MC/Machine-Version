<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.machineversion.terminal"
    android:installLocation="auto"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <android-permission android:name="android.permission.INTERACT_ACROSS_USERS_FULL" />
    <android-permission android:name="android.permission.INTERACT_ACROSS_USERS" />

    <uses-permission android:name="android.permission.WRITE_SETTINGS" />

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity android:name=".Splash" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
        </activity>

        <!-- 菜单类 -->
        <activity
            android:name="com.machineversion.option.FileManager"
            android:label="@string/title_activity_file_manager" >
        </activity>
        <activity
            android:name="com.machineversion.option.CameraParams"
            android:label="@string/titile_activity_camera_params" >
        </activity>
        <activity
            android:name="com.machineversion.option.SysSettings"
            android:label="@string/title_activity_sys_settings" >
        </activity>
        <activity
            android:name="com.machineversion.option.FastenerSettings"
            android:label="@string/title_activity_fastener_settings" >
        </activity>
        <activity
            android:name="com.machineversion.option.MachineLearning"
            android:label="@string/title_activity_machine_learning" >
        </activity>
        <activity
            android:name="com.machineversion.option.Help"
            android:label="@string/title_activity_help" >
        </activity>

        <!-- 子菜单类 -->
        <activity
            android:name="com.machineversion.sub_option.FileManager_fileExplorer"
            android:label="@string/title_activity_file_manager" >
        </activity>
        <activity
            android:name="com.machineversion.sub_option.DebugMode"
            android:label="@string/title_activity_debug_mode" >
        </activity>
    </application>

</manifest>